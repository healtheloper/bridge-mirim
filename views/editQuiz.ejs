<!DOCTYPE html>
<%- include("./partials/header.ejs") %>

<body>
    <div class="container">
        <form action=<%= routes.editQuiz(quiz.id) %> method="post">
            <div class="form-group">
                <label for="title" class="control-label">Quiz Title</label>
                <input type="text" class="form-control" placeholder="Title" id="question" name="question" required=true>
            </div>
            <div class="form-group">
                <label for="answerOne" class="control-label">Quiz 1</label>
                <input type="text" class="form-control" placeholder="Answer One" id="answerOne" name="answerOne"
                    required=true value=<%= quiz.answerOne %>>
            </div>
            <div class="form-group">
                <label for="answerTwo" class="control-label">Quiz 2</label>
                <input type="text" class="form-control" placeholder="Answer Two" id="answerTwo" name="answerTwo"
                    required=true value=<%= quiz.answerTwo %>>
            </div>
            <div class="form-group">
                <label for="answerThree" class="control-label">Quiz 3</label>
                <input type="text" class="form-control" placeholder="Answer Three" id="answerThree" name="answerThree"
                    required=true value=<%= quiz.answerThree %>>
            </div>
            <div class="form-group">
                <label for="answerFour" class="control-label">Quiz 4</label>
                <input type="text" class="form-control" placeholder="Answer Four" id="answerFour" name="answerFour"
                    required=true value=<%= quiz.answerFour %>>
            </div>
            <div class="form-group">
                <h5 class="text">What is Correct ? ðŸ¤”</h5>
                <label for="answerCheckOne" class="answer__label control-label btn btn-info">
                    <input type="radio" id="answerCheckOne" name="answerCheck" value="1">Quiz 1
                </label>
                <label for="answerCheckTwo" class="answer__label control-label btn btn-info">
                    <input type="radio" id="answerCheckTwo" name="answerCheck" value="2">Quiz 2
                </label>
                <label for="answerCheckThree" class="answer__label control-label btn btn-info">
                    <input type="radio" id="answerCheckThree" name="answerCheck" value="3">Quiz 3
                </label>
                <label for="answerCheckFour" class="answer__label control-label btn btn-info">
                    <input type="radio" id="answerCheckFour" name="answerCheck" value="4">Quiz 4
                </label>
            </div>
            <div align="center">
                <button type="submit" class="btn btn-primary " value="Upload Quiz">upload</button>
            </div>
        </form>
    </div>
    <%- include("./partials/footer.ejs") %>
    <script>
        const questionTitle = document.querySelector("#question");
        const answerLabel = document.querySelectorAll(".answer__label");
        questionTitle.value = "<%= quiz.question %>";

        for (let i = 0; i < answerLabel.length; i++) {
            if (answerLabel[i].childNodes[1].value == "<%= quiz.answerCheck %>") {
                answerLabel[i].childNodes[1].checked = true;
            }
        }

    </script>
</body>