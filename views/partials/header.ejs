            <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-align-justify"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav ml-auto">
                  <% if (!user.isAuthenticated) {%>
                    <li class="nav-item active">
                      <a  class="nav-link" href=<%= routes.join %>> Join </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href=<%= routes.login %>> Log In </a>
                    </li>
                    <%} else {%>
                    <li class="nav-item">
                      <a class="nav-link" href="/videos<%= routes.upload %>"> Upload </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href=<%= routes.userDetail(user.id) %>> Profile </a>
                    </li>
                    <li>
                      <a class="nav-link" href=<%= routes.logout %>> Log Out </a>
                    </li>
                    <%} %>
                </ul>
            </div>
        </div>
    </nav>
    </div>
